{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@jaspero/fb-fields-mat": [
        "dist/fields-mat"
      ],
      "@jaspero/form-builder": [
        "dist/form-builder"
      ],
      "@jaspero/page-builder": [
        "dist/page-builder"
      ],
      "@jaspero/tinymce": [
        "dist/tinymce"
      ],
      "@jaspero/form-ui": [
        "dist/form-ui"
      ],
      "@jaspero/ref-table": [
        "dist/ref-table"
      ],
      "@jaspero/fb-segments-mat": [
        "dist/segments-mat"
      ],
      "@jaspero/monaco-editor": [
        "dist/monaco-editor"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
